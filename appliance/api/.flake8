[flake8]
jobs = auto

verbose = 0
quiet = 0

format = default
count = True
show-source = True
statistics = True

output-file = .flake8.log
# Also print output to stdout if output-file has been configured.
tee = True

exclude =
    # git folder
    .git,
    # python cache
    __pycache__,
    # pytest cache
    .pytest_cache,
    # mypy cache
    .mypy_cache
filename =
    *.py

builtins =


disable-noqa = False

max-line-length = 100
max-complexity = 10
hang-closing = True

ignore =
    #E133,
    #E203,
    #W503

select =
    #E,
    #W,
    #F,
    #C

per-file-ignores =
    #__init__.py:F401,F403

enable-extensions =
